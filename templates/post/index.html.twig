{% extends 'base.html.twig' %}

{% block title %}Vos articles{% endblock %}

{% block body %}
    <div class="menuIndex">
        <a href="{{ path('app_account') }}" class="btn-primary btnIndexLNewPost"><i class="fas fa-edit"></i>Mon compte</a>
        {% if is_granted('ROLE_STUDENT') %}
            <a href="{{ path('post_create') }}" class="btn-primary btnIndexLNewPost"><i class="fas fa-edit"></i>Nouveau post</a>
        {% endif %}
        <a href="{{ path('app_logout') }}" class="btnIndexLogout"><i class="fas fa-power-off"></i>DÃ©connexion</a>
    </div>
    <div class="articles" >
        {% for post in posts %}
            <div class="article articleIndex">
                {{ post.title }}
                <a href="{{ path('post_show', {'id': post.id}) }}" class="btn-primary btnReadMore">Lire la suite</a>
                <div >
                    {% if post.isPublished == true %}
                        <img src="{{ asset('images/checked.png') }}" alt="checked">
                    {% else %}
                        <img src="{{ asset('images/cross.png') }}" alt="cross">
                    {% endif %}
                </div>
            </div>
        {% endfor %}
    </div>

{% endblock %}
