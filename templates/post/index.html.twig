{% extends 'base.html.twig' %}

{% block title %}Vos Posts{% endblock %}

{% block body %}
    <div class="menuIndex">
        <a href="{{ path('app_account') }}" class="btn-primary btnIndexLAccount"><i class="fas fa-user"></i></i><span>Mon compte</span></a>
        {% if is_granted('ROLE_STUDENT') %}
            <a href="{{ path('post_create') }}" class="btn-primary btnIndexLNewPost"><i class="fas fa-edit"></i>Nouveau post</a>
        {% endif %}
        <a href="{{ path('app_logout') }}" class="btnIndexLogout"><i class="fas fa-power-off"></i>Déconnexion</a>
    </div>
    <h1>Vos Posts</h1>
    <div class="articles" >
        {% for post in posts %}
            <div class="article articleIndex">
                {{ post.title }}
                <a href="{{ path('post_show', {'id': post.id}) }}" class="btn-primary btnReadMore">Lire la suite</a>
                <div >
                    {% if post.isPublished == true %}
                        <img src="{{ asset('images/checked.png') }}" alt="checked">
                    {% else %}
                        <img src="{{ asset('images/cross.png') }}" alt="cross">
                    {% endif %}
                </div>
            </div>
        {% endfor %}
    </div>
    <h1>Vos chats</h1>
    <div class="articles" >
        {% for chat in chats %}
          {% if app.user.id == chat.idPostAuthor or app.user.id == chat.idCommentAuthor %}
            <div class="article articleIndex">
                {{ chat.name }}
                <a href="{{ path('post_answer', {id_post: chat.idPost, id_author:chat.idComment}) }}" class="btn-primary btnReadMore">Accéder au Chat</a>
            </div>
          {% endif %}
        {% endfor %}
    </div>

{% endblock %}
