{% extends 'base.html.twig' %}

{% block title %}Studer | Créer un nouvel article{% endblock %}

{% block body %}
<div class="menuIndex menuIndexAccount menuShow">
    <a href="{{ path('post') }}" class="btn-primary btnShowBackAccount"><i class="fas fa-chevron-left"></i>Retour</a>
    <h1 class="titleStuder">Studer.</h1>
    <a href="{{ path('app_logout') }}" class="btnIndexLogout"><i class="fas fa-power-off"></i>Déconnexion</a>
</div>
<div class="contentCreate">
    <h1>Créer un nouveau Post</h1>

    {% form_theme formPost 'bootstrap_4_horizontal_layout.html.twig' %}
    {{ form_start(formPost) }}

    {{ form_row(formPost.title, {'attr': {'placeholder': "Titre de l'article"}}) }}
    {{ form_row(formPost.content, {'attr': {'placeholder': "Contenu de l'article"}}) }}

    <div class="btnAdd">
        <button type="submit" class="btn btn-success">
            Ajouter l'article
        </button>
    </div>
    {{ form_end(formPost) }}
</div>
{% endblock %}
