{% extends 'base.html.twig' %}

{% block title %}Studer | Matchez vos connaissances{% endblock %}

{% block body %}
<div class="contentRegister">
    {% for flashError in app.flashes('verify_email_error') %}
        <div class="alert alert-danger" role="alert">{{ flashError }}</div>
    {% endfor %}

    <h1>S'inscrire</h1>

    {{ form_start(registrationForm) }}
        {{ form_row(registrationForm.username, {
            label: 'Pseudo'
        }) }}
        {{ form_row(registrationForm.email) }}
        {{ form_row(registrationForm.plainPassword, {
            label: 'Mot de passe'
        }) }}
        {{ form_row(registrationForm.role, {
            label: 'RÃ´le'
        }) }}
        {{ form_row(registrationForm.agreeTerms, {
            label: "J'accepte les termes du site"
        }) }}

    <div class="contentRegisterButton">
        <button type="submit" class="btn btnRegister">S'inscrire</button>
        <a href="{{ path('app_login') }}" class="btn btnRegisterLogin">
            Se connecter
        </a>
    </div>
    {{ form_end(registrationForm) }}
</div>
{% endblock %}
